<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.MuscleExerciseList.MuscleExerciseListActivity">


    <EditText
        android:id="@+id/edit_names"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="12dp"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:paddingTop="0dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_descs"
        android:layout_width="394dp"
        android:layout_height="75dp"
        android:layout_below="@+id/edit_names"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:maxLength="300"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_urls"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_descs"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:gravity="start"
        android:hint="Enter Url Letter Code (can leave blank)"
        android:inputType="textMultiLine"
        android:textSize="15sp" />

    <Button
        android:id="@+id/save_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_urls"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:text="Save"
        android:textSize="20sp" />

    <Button
        android:id="@+id/show_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_btns"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="-5dp"
        android:text="Show All"
        android:textSize="20sp" />

    <Button
        android:id="@+id/decrease_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_btns"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="-5dp"
        android:text="Dec"
        android:textSize="20sp" />

    <Button
        android:id="@+id/increase_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_btns"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="220dp"
        android:layout_toStartOf="@+id/decrease_btn"
        android:layout_marginTop="-5dp"
        android:text="Inc"
        android:textSize="20sp" />
</RelativeLayout>