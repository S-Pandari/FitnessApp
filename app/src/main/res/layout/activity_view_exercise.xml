<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Pages.ViewExercise.ViewExercise">

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_desc"
        android:layout_width="387dp"
        android:layout_height="130dp"
        android:layout_below="@id/view_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="501dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_url"
        android:layout_width="387dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="-5dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="7dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/view_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_youtube"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="141dp"
        android:text="Play" />

    <view
        android:id="@+id/view_youtube"
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="200dp" />

    <VideoView
        android:id="@+id/view_user_video"
        android:layout_width="fill_parent"
        android:layout_height="297dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-125dp"
        android:layout_marginEnd="0dp"
        android:layout_below="@id/view_play"
        />

    <Button
        android:id="@+id/view_browser_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/view_user_video"
        android:text="Browse Video"
        />
    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="250dp"
        android:layout_below="@id/view_user_video"
        android:text="Record"
        />
</RelativeLayout>
</ScrollView>